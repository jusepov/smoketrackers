            box-sizing: border-box;
        }


        .container {
            background: white;
            padding: 15px;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }


        button {
            padding: 10px 20px;
            background: #ff4444;
            color: white;
            border: none;
            border-radius: 25px;
            font-size: 18px;
            cursor: pointer;
            width: 100%; /* Hacer que los botones ocupen el 100% del ancho en pantallas peque침as */
            margin: 10px 0;
        }


        .chart-container {
            width: 100%;
            margin: 20px 0;
